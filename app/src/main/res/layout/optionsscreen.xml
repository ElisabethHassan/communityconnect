<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535">

    <TextView
        android:id="@+id/city_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="87dp"
        android:text="@string/city"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="261dp"
        android:text="@string/popular"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toSignUp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="213dp"
        android:layout_height="172dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="216dp"
            android:layout_height="168dp">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="215dp"
                android:layout_height="85dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fooddrivepic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/title"
                android:layout_width="164dp"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="36dp"
                android:text="Nashville Rescue Mission"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_image" />

            <TextView
                android:id="@+id/location"
                android:layout_width="103dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="96dp"
                android:text="250 Bradyville Pike"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/date"
                android:layout_width="101dp"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="100dp"
                android:text="Tuesday, October 10"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <TextView
                android:id="@+id/time"
                android:layout_width="141dp"
                android:layout_height="19dp"
                android:layout_marginEnd="60dp"
                android:text="12:00pm - 3:00pm"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="202dp"
        android:text="@string/happening"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


    <Button
        android:id="@+id/toSignUp"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="12dp"
        android:text="@string/featured"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/city_id" />


    <Button
        android:id="@+id/button3"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="75dp"
        android:text="@string/feed"
        app:backgroundTint="#4C4B4B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="213dp"
        android:layout_height="172dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="156dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/header_image2"
                android:layout_width="216dp"
                android:layout_height="81dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fooddrivepic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="164dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="36dp"
                android:text="Nashville Rescue Mission"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_image2" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="96dp"
                android:text="250 Bradyville Pike"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title2" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="101dp"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="100dp"
                android:text="Tuesday, October 10"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location2" />

            <TextView
                android:id="@+id/time2"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="141dp"
                android:layout_height="19dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="61dp"
                android:text="12:00pm - 3:00pm"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>